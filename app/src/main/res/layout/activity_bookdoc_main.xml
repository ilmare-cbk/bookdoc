<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kr.bookdoc.bookdoc.BookdocMainActivity">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_bookdoc_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:theme="@style/Theme.Transition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bookdoc_main_container_vp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v4.view.ViewPager>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookdoc_main_appbarlayout"
            android:background="@color/transparent"
            app:elevation="0dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#252525"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:titleEnabled="false">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="326dp"
                    android:id="@+id/bookdoc_main_vp"
                    android:background="#e2e2e2">
                </android.support.v4.view.ViewPager>
                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:id="@+id/bookdoc_main_toolbar"
                    app:layout_collapseMode="pin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logo"
                        android:layout_gravity="center"/>
                </android.support.v7.widget.Toolbar>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="19dp"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slide1"
                        android:layout_margin="5dp"
                        android:id="@+id/bookdoc_main_slide1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slide2"
                        android:layout_margin="5dp"
                        android:id="@+id/bookdoc_main_slide2"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slide2"
                        android:layout_margin="5dp"
                        android:id="@+id/bookdoc_main_slide3"/>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:id="@+id/bookdoc_main_tl"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingBottom="0dp"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp"
                app:tabPaddingTop="0dp"
                app:tabMode="fixed"
                app:tabGravity="fill">
            </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/appBar"
        android:visibility="gone"
        android:id="@+id/bookdoc_sub_toolbar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>