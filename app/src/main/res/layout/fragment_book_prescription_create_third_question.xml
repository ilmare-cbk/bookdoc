<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="26dp"
        android:paddingLeft="26dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="91dp">
            <font.setfont.NotoSansLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어디에 적용하면 좋은가요?"
                android:textSize="18sp"
                android:textColor="@color/defaultFontColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp">
                <font.setfont.NotoSansLTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#959595"
                    android:id="@+id/bookdoc_create_prescription_third_tv"/>
                <font.setfont.NotoSansLTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/200"
                    android:textSize="12sp"
                    android:textColor="#959595"/>
            </LinearLayout>
        </RelativeLayout>
        <font.setfont.NanumLEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="내용입력"
            android:textSize="15sp"
            android:textColorHint="#959595"
            android:textColor="@color/defaultFontColor"
            android:background="@color/white"
            android:id="@+id/bookdoc_create_prescription_third_edit"
            android:maxLength="200"
            android:gravity="start"/>
    </LinearLayout>
</android.support.v7.widget.CardView>