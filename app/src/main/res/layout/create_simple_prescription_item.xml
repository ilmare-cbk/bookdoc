<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/create_simple_prescription_item">

    <font.setfont.NotoSansLTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한줄 남기기"
        android:textSize="13sp"
        android:textColor="@color/categoryTextColor"
        android:layout_above="@+id/create_simple_prescription_img"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/create_simple_prescription_img">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add"/>
    </LinearLayout>

</RelativeLayout>