<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="26dp">

        <font.setfont.NotoSansRTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색 태그를 입력 해주세요."
            android:textColor="@color/defaultFontColor"
            android:textSize="18sp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38.4dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <font.setfont.NotoSansLEditText
                android:id="@+id/edittext_bookdoc_create_prescription_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="text"
                android:hint="#태그를 입력 해주세요.(최대 5개)"
                android:maxLength="10"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:textColor="@color/defaultFontColor"
                android:textColorHint="#959595"
                android:textSize="13sp"
                android:paddingLeft="26dp"/>

            <font.setfont.NotoSansRTextView
                android:id="@+id/textview_create_prescription_tag"
                android:layout_width="53.6dp"
                android:layout_height="match_parent"
                android:text="추가"
                android:gravity="center"
                android:textColor="@color/defaultFontColor"
                android:textSize="13sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp">

            <com.kr.bookdoc.bookdoc.bookdocutils.FlowLayout
                android:id="@+id/flowlayout_create_prescription_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </com.kr.bookdoc.bookdoc.bookdocutils.FlowLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>