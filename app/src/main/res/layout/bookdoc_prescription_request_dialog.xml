<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="96dp"
        android:orientation="vertical">
        <font.setfont.NotoSansLTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/edit_request"
            android:gravity="center"
            android:textColor="@color/defaultFontColor"
            android:textSize="15sp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/bookdoc_prescription_request_edit"/>
        <font.setfont.NotoSansLTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/delete_request"
            android:gravity="center"
            android:textColor="@color/defaultFontColor"
            android:textSize="15sp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/bookdoc_prescription_request_delete"/>
    </LinearLayout>

</android.support.v7.widget.CardView>