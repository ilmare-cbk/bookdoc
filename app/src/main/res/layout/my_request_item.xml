<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_default"
                    android:id="@+id/my_request_item_userimage"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="9"
                    android:layout_marginLeft="8dp">
                    <font.setfont.NotoMTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책더쿠"
                        android:textSize="13sp"
                        android:textColor="@color/defaultFontColor"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/my_request_item_username"/>
                    <font.setfont.NotoRTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10월 21일"
                        android:textSize="11sp"
                        android:textColor="@color/defaultFontColor"
                        android:id="@+id/my_request_item_created_time"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_request_item_more_btn"
                    android:src="@drawable/more_black_24dp"/>
            </LinearLayout>

            <font.setfont.NotoDTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인문학 전공자인데 회사에서 다음주까지 기획서를 써야해요. 혹시 기획서 슬 때 참고할 좋은 책 있을까요?"
                android:textSize="13sp"
                android:textColor="@color/request_content"
                android:id="@+id/my_request_item_content"
                android:lineSpacingExtra="19px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_marginBottom="8dp">
            <font.setfont.NotoDTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저도 궁금해요 56"
                android:textSize="10sp"
                android:textColor="@color/count"
                android:id="@+id/my_request_item_wonder_count"/>
            <font.setfont.NotoDTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처방 수 9개"
                android:textSize="10sp"
                android:textColor="@color/count"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:id="@+id/my_request_item_prescription_count"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>