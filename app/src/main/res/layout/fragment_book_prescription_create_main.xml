<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:background="#edf5f6"
            android:id="@+id/book_prescription_signature_img">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/book_prescription_create_main_background_img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blur"
                android:visibility="gone"
                android:id="@+id/book_prescription_create_main_blur"
                android:orientation="horizontal"> </LinearLayout>
            <font.setfont.NanumLEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목입력"
                android:textColorHint="#b7b7b7"
                android:textSize="21sp"
                android:textColor="@color/defaultFontColor"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@color/transparent"
                android:id="@+id/book_prescription_create_title_edit"/>

            <android.support.v7.widget.CardView
                android:layout_width="38.4dp"
                android:layout_height="38.4dp"
                android:id="@+id/book_prescription_create_main_add_background_img"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_alignEnd="@+id/book_prescription_create_title_edit"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="-16dp"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/photo"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/book_prescription_create_main_search_book">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/book_search"
                    android:layout_marginRight="6dp"/>
                <font.setfont.NotoSansLTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천 도서를 검색하세요"
                    android:textColor="#b7b7b7"
                    android:textSize="16sp" />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="26dp"
                android:id="@+id/book_prescription_create_book_info"
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <com.kr.bookdoc.bookdoc.bookdocutils.CustomImageView
                        android:layout_width="87dp"
                        android:layout_height="123dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/book_prescription_create_book_img" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp">
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_create_book_title"
                            android:textSize="15sp"
                            android:textColor="@color/defaultFontColor"
                            android:layout_marginBottom="6dp"/>
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_create_book_author"
                            android:textColor="#959595"
                            android:layout_marginBottom="6dp"/>
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_create_book_publisher"
                            android:textColor="#959595"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/isbn"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>