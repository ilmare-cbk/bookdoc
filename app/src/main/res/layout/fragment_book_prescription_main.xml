<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defalutBackground"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_weight="0"
            android:theme="@style/Theme.Transition"
            android:id="@+id/book_prescription_main_title_container">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/book_prescription_main_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/blur"
                android:paddingTop="86dp"
                android:paddingBottom="23dp"
                android:paddingRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="44dp">
                    <font.setfont.NanumLTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/book_prescription_main_title"
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="7dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/more_white_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="-10dp"
                        android:id="@+id/book_prescription_detail_main_more"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/book_prescription_main_userinfo">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/book_prescription_main_profile" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <font.setfont.NotoSansRTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/book_prescription_main_username"
                                android:textSize="13sp"
                                android:textColor="@color/white"/>
                            <font.setfont.NotoSansRTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/book_prescription_main_created_time"
                                android:textSize="13sp"
                                android:textColor="#898989"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="58dp"
                android:background="@drawable/bookmark2"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/book_prescription_detail_tag_container">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp">
                    <com.kr.bookdoc.bookdoc.bookdocutils.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/book_prescription_main_tag_container">
                    </com.kr.bookdoc.bookdoc.bookdocutils.FlowLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:layout_weight="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:id="@+id/book_prescription_main_book_container">
            <font.setfont.NotoSansRTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="이 책을 처방드립니다."
                android:textSize="17sp"
                android:textColor="@color/defaultFontColor"
                android:layout_marginBottom="4dp"
                android:layout_above="@+id/book_prescription_detail_book_info"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/book_prescription_detail_book_info"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <com.kr.bookdoc.bookdoc.bookdocutils.CustomImageView
                        android:layout_width="87dp"
                        android:layout_height="123dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/book_prescription_main_book_img"
                        android:transitionName="@string/transition_prescription_bookimg"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp">
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_main_book_title"
                            android:textSize="15sp"
                            android:textColor="@color/defaultFontColor"
                            android:layout_marginBottom="6dp"/>
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_main_book_author"
                            android:textColor="#959595"
                            android:layout_marginBottom="6dp"/>
                        <font.setfont.NotoSansRTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/book_prescription_main_book_publisher"
                            android:textColor="#959595"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>