<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/white">
        <font.setfont.NanumLTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:id="@+id/book_prescription_detail_guide_question"
            android:text="누구를 위한\n책 처방인가요?"
            android:textColor="@color/defaultFontColor"
            android:textSize="24sp"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="58dp"
            android:background="@drawable/bookmark2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"/>
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_black"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bookdoc_prescription_bookdoc_title"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">
            <font.setfont.NanumLTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_prescription_guide_question_content"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:textColor="@color/defaultFontColor"
                android:lineSpacingExtra="10sp"/>
        </ScrollView>

        <font.setfont.NotoSansRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookdoc_prescription_bookdoc_title"
            android:text="북닥의 책 처방"
            android:textColor="@color/defaultFontColor"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>
</LinearLayout>