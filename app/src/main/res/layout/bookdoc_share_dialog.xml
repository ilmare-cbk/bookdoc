<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:layout_width="258dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/bookdoc_share_dialog_close">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close"/>
        </LinearLayout>

        <font.setfont.NotoLTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="북닥의 책 처방 컨텐츠를\n공유해보세요"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textSize="17sp"
            android:textColor="@color/defaultFontColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="35dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/bookdoc_share_dialog_facebook">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/share_facebook"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/bookdoc_share_dialog_kakaotalk">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/talk"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/bookdoc_share_dialog_kakaostory">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kakao"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>